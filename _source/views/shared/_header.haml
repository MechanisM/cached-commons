%section#header{:role => :definition}
  .header
    .frame
      %header.logo
        %h1
          %a{:href => "/"}= c("metadata.title")
      %nav.navigation{:role => :menu}
        %ul
          %li
            %a{:href => "/"} Cache
          %li
            %a{:href => "/readme"} Readme
          %li
            %a{:href => "http://github.com/viatropos/cached-commons"} Source
          %li
            %a{:href => "http://github.com/viatropos/cached-commons/issues", :title => "Point us to a library on Github Issues", :alt => "Point us to a library on Github Issues"} Submit
          %li
            %a{:href => "http://github.com/viatropos/cached-commons/zipball/master"} Download
          %li
            %a{:href => "/tips"} Tips
  .top
    .frame
      %header
        %hgroup
          %h1= c("metadata.title")
          %h2= c("metadata.tagline")
      %details.downloadable
        %summary.download
          %a{:href => "http://github.com/viatropos/cached-commons/zipball/master"} Download
          .instructions Download Everything as a Zip
        .details
          :textile
            #{site.find_post_by_path("/cached-commons").read}
      .code
        %pre
          %code
      .options
        %a.all{:href => "/all"} All
        %a.clear{:href => "/clear"} Clear
      %textarea.code#code{:wrap => :off, :readonly => true}